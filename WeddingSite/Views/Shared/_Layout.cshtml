<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Lila & Peter - @ViewBag.Title</title>
    <link href="~/content/styles/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/content/styles/layout-800.css" rel="stylesheet" type="text/css" media="only screen and (max-width: 800px)" />
    <link href="~/content/images/icon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    <div id="header">
        <div id="header-content">
            <p id="header-names">Lila <span class="logo-ampersand">&amp;</span> Peter</p>
            <p id="header-date">August 29, 2015 &bull; Cedarbrook Lodge</p>
        </div>
    </div>
    <div id="sidebar">
        <div id="sidebar2">
            <ul>
                <li><a href="~/">Home</a></li>
                <li><a href="~/party">Wedding Party</a></li>
                <li><a href="~/photos">Photos</a></li>
                <li><a href="~/visitor">Visitor Info</a></li>
                <li><a href="~/guests">Guest List</a></li>
                <li><a href="~/registry">Gift Registry</a></li>
                <li><a href="~/faq">FAQ</a></li>
            </ul>
        </div>
    </div>
    <div id="content">
        <div id="content2">
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <p style="text-align: center"><a href="mailto:lilatran@outlook.com">lilatran@outlook.com</a></p>
    </div>
    @* Something needs to pull the body background down past the content *@
    <div style="clear: both"></div>

    @* StatCounter *@
    <script type="text/javascript">
        var sc_project = 10087563;
        var sc_invisible = 1;
        var sc_security = "b9106b98";
        var scJsHost = (("https:" == document.location.protocol) ? "https://secure." : "http://www.");
        document.write("<sc" + "ript type='text/javascript' src='" + scJsHost + "statcounter.com/counter/counter.js'></" + "script>");
